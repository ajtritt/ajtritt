[user]
	name = Andrew Tritt
	email = ajtritt@lbl.gov
[core]
	excludesfile = /Users/ajtritt/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  s    = status -sb
  l    = log --decorate --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative

  c    = commit --sign
  ca   = commit -a --sign
  cc   = commit --amend

  a    = add
  ap   = add --patch
  rm   = rm

  d    = diff
  di   = diff
  ds   = diff --staged
  dt   = diff --word-diff
  lst  = diff HEAD^..HEAD
  st   = status

  sw   = checkout
  swb  = checkout -b
  pd   = checkout -
  b    = branch
  bd   = branch -d

  r    = rebase
  ri   = rebase --interactive
  m    = merge --no-ff

  p    = push
  pm   = push --mirror
  pt   = push --tags

  hub  = !sh -c 'hub clone -p $1 $2' -

  undo = reset HEAD~1

  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  name = !git for-each-ref --format='%(refname:short)' `git symbolic-ref HEAD`
  opromote = !BRCH=$(git name) && git push origin $BRCH && git branch --set-upstream-to=origin/$BRCH
  odemote = !BRCH=$(git name) && git push origin :$BRCH
  promote = !BRCH=$(git name) && git push ajtritt $BRCH && git branch --set-upstream-to=ajtritt/$BRCH
  demote = !BRCH=$(git name) && git push ajtritt :$BRCH
  which = branch -a --contains

  last-commit = !git --no-pager log --max-count 1 --remotes --pretty=format:"%H%n"
  last-branch = for-each-ref --count 1 --sort=-committerdate refs/remotes/ --format='%(refname:short)'

[core]
  autocrlf = input
  whitespace = trailing-space,space-before-tab
	excludefile = ~/.gitignore
[diff]
  renames = copies
[branch]
  autosetupmerge = true
[rerere]
  enabled = true
  autoupdate = true
[push]
        default = matching
